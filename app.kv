<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White color
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Settings button
        Button:
            id: settings_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {"right": 0.90, "top": 0.95}
            background_normal: 'assets/settings.png'
            background_down: 'assets/settings1.png'
            border: [0, 0, 0, 0]
            on_press: root.go_to_settings(self)
        
        # Flip Camera button
        Button:
            id: camera_button
            size_hint: (None, None)
            size: 50, 50
            pos_hint: {"right": 0.30, "y": 0.05}
            background_normal: 'assets/flip.png'
            background_down: 'assets/flip1.png'
            border: [0, 0, 0, 0]
            on_press: root.on_flip(self);
        
        # Flash button
        Button:
            id: flash_button
            size_hint: None, None
            size: 25, 60
            pos_hint: {"right": 0.80, "y": 0.05}
            background_normal: 'assets/flash.png'
            background_down: 'assets/flash1.png'
            border: [0, 0, 0, 0]
            on_press: root.on_flash(self);

<SettingsScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White color
            Rectangle:
                pos: self.pos
                size: self.size

        # Back button        
        Button:
            id: back_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {"x": 0.05, "top": 0.95}  # Fixed 'left' to 'x'
            background_normal: 'assets/back.png'
            background_down: 'assets/back1.png'
            border: [0, 0, 0, 0]
            on_press: root.go_to_video()

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 300  # Overall size of the settings panel
            pos_hint: {"center_x": 0.43, "center_y": 0.6}
            spacing: 50

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 100  # Height of the row
                spacing: 50  # Space between buttons

                Button:
                    id: volume_button
                    size_hint: None, None
                    size: 110, 90
                    background_normal: 'assets/volume.png'
                    background_down: 'assets/volume.png'
                    border: [0, 0, 0, 0]
                    on_press: root.adjust_volume()

                Button:
                    id: language_button
                    size_hint: None, None
                    size: 110, 90
                    background_normal: 'assets/language.png'
                    background_down: 'assets/language1.png'
                    border: [0, 0, 0, 0]
                    on_press: root.change_language()

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                pos_hint: {"center_x": 0.85}
                height: 100  # Height of the row

                Button:
                    id: manual_button
                    size_hint: None, None
                    size: 120, 90
                    background_normal: 'assets/manual.png'
                    background_down: 'assets/manual1.png'
                    border: [0, 0, 0, 0]
                    on_press: root.manual_screen()

