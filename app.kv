<MainScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White color
            Rectangle:
                pos: self.pos
                size: self.size

        # Camera widget - Positioned in the center of the screen
        Camera:
            id: camera
            resolution: (480, 640)
            play: True
            size_hint: None, None
            size: 320, 480
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        
        # Settings button
        Button:
            id: settings_button
            size_hint: None, None
            size: 60, 60
            pos_hint: {"right": 0.95, "top": 0.95}
            background_normal: 'assets/settings.png'
            background_down: 'assets/settings.png'
            on_press: root.go_to_settings(self)
        
        # Camera button
        Button:
            id: camera_button
            size_hint: None, None
            size: 80, 80
            pos_hint: {"x": 0.05, "y": 0.05}
            background_normal: 'assets/flip_camera.png'
            background_down: 'assets/flip_camera.png'
            on_press: root.on_flip(self);
        
        # Flash button
        Button:
            id: flash_button
            size_hint: None, None
            size: 80, 80
            pos_hint: {"right": 0.95, "y": 0.05}
            background_normal: 'assets/flash.png'
            background_down: 'assets/flash.png'
            on_press: root.on_flash(self);

<SettingsScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White color
            Rectangle:
                pos: self.pos
                size: self.size

        # Back button        
        Button:
            id: back_button
            size_hint: None, None
            size: 70, 70
            pos_hint: {"x": 0.05, "top": 0.95}  # Fixed 'left' to 'x'
            background_normal: 'assets/back.png'
            background_down: 'assets/back.png'
            on_press: root.go_to_video()

        # Central BoxLayout containing all controls
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 300  # Overall size of the settings panel
            pos_hint: {"center_x": 0.46, "center_y": 0.6}
            spacing: 30  # Space between rows

            # Row 1: Volume and Language buttons
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 100  # Height of the row
                spacing: 40  # Space between buttons

                Button:
                    id: volume_button
                    size_hint: None, None
                    size: 100, 100
                    background_normal: 'assets/volume.png'
                    background_down: 'assets/volume.png'
                    on_press: root.adjust_volume()

                Button:
                    id: language_button
                    size_hint: None, None
                    size: 100, 100
                    background_normal: 'assets/language.png'
                    background_down: 'assets/language.png'
                    on_press: root.change_language()

            # Row 2: Flip Camera and Manual buttons
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                pos_hint: {"center_x": 0.8}
                height: 100  # Height of the row

                Button:
                    id: manual_button
                    size_hint: None, None
                    size: 100, 100
                    background_normal: 'assets/manual.png'
                    background_down: 'assets/manual.png'
                    on_press: root.manual_screen()

