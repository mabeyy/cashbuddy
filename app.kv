<FlipCameraScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White color
            Rectangle:
                pos: self.pos
                size: self.size

        # Back button        
        Button:
            id: back_button
            size_hint: None, None
            size: 70, 70
            pos_hint: {"x": 0.05, "top": 0.95}  # Fixed 'left' to 'x'
            background_normal: 'assets/back.png'
            background_down: 'assets/back.png'
            on_press: root.go_to_settings()

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 300, 80  # Adjusted for better alignment
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: 20  # Margins around the content
            spacing: 15  # Space between the Label and Switch

            Label:
                text: 'Flip Camera'
                font_size: 20
                color: 0, 0, 0, 1  # Black text color (set explicitly if needed)
                size_hint: None, None
                size: 150, 50

            Switch:
                id: flip_switch
                size_hint: None, None
                size: 80, 50
                active: False
                on_active: root.switch_callback(self, self.active)

