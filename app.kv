<MainScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'assets/bg.jpg'
                pos: self.pos  
                size: self.size 

        Label:
            id: name
            text: "CASH BUDDY"
            color: 0, 0, 0, 1 
            size_hint: None, None 
            size: self.texture_size
            font_size: 30 
            font_name: 'assets/AovelSansRounded-rdDL.ttf' 
            pos_hint: {"right": 0.55, "top": 0.93} 

        # Settings button
        Button:
            id: settings_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {"right": 0.90, "top": 0.95}
            background_normal: 'assets/settings.png'
            background_down: 'assets/settings1.png'
            border: [0, 0, 0, 0]
            on_press: root.go_to_settings(self)
        
        # Flip Camera button
        Button:
            id: camera_button
            size_hint: (None, None)
            size: 50, 50
            pos_hint: {"right": 0.30, "y": 0.05}
            background_normal: 'assets/flip.png'
            background_down: 'assets/flip1.png'
            border: [0, 0, 0, 0]
            on_press: root.on_flip(self);
        
        # Flash button
        Button:
            id: flash_button
            size_hint: None, None
            size: 20, 60
            pos_hint: {"right": 0.80, "y": 0.05}
            background_normal: 'assets/flash.png'
            background_down: 'assets/flash1.png'
            border: [0, 0, 0, 0]
            on_press: root.on_flash(self);

<SettingsScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'assets/bg.jpg'
                pos: self.pos  
                size: self.size 

        # Back button        
        Button:
            id: back_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {"x": 0.05, "top": 0.95}
            background_normal: 'assets/back.png'
            background_down: 'assets/back1.png'
            border: [0, 0, 0, 0]
            on_press: root.go_to_video()

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 300 
            pos_hint: {"center_x": 0.43, "center_y": 0.4}
            spacing: 50

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 100 
                spacing: 50 

                Button:
                    id: volume_button
                    size_hint: None, None
                    size: 110, 90
                    background_normal: 'assets/volume.png'
                    background_down: 'assets/volume.png'
                    border: [0, 0, 0, 0]
                    on_press: root.adjust_volume()

                Button:
                    id: language_button
                    size_hint: None, None
                    size: 110, 90
                    background_normal: 'assets/language.png'
                    background_down: 'assets/language1.png'
                    border: [0, 0, 0, 0]
                    on_press: root.change_language()

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                pos_hint: {"center_x": 0.85}
                height: 100 

                Button:
                    id: manual_button
                    size_hint: None, None
                    size: 120, 90
                    background_normal: 'assets/manual.png'
                    background_down: 'assets/manual1.png'
                    border: [0, 0, 0, 0]
                    on_press: root.manual_screen()
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                pos_hint: {"center_x": 0.70}

                Label:
                    id: name
                    text: "CASH BUDDY"
                    color: 0, 0, 0, 1 
                    size_hint: None, None 
                    size: self.texture_size
                    font_size: 30 
                    font_name: 'assets/AovelSansRounded-rdDL.ttf'

<AdjustVolumeScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: 'assets/bg.jpg'
                pos: self.pos  
                size: self.size 

        # Back button        
        Button:
            id: back_button
            size_hint: None, None
            size: 50, 50
            pos_hint: {"x": 0.05, "top": 0.95}
            background_normal: 'assets/back.png'
            background_down: 'assets/back.png'
            border: [0, 0, 0, 0]
            on_press: root.go_to_settings()

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 200, 50 
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: 10 
            spacing: 20 

            Button:
                id: volume_button
                text: "Increase Volume"
                size_hint: 1, None
                height: 50
                font_size: 20
                background_color: 0, 0, 0, 1
                on_press: root.adjust_volume(5)

            Button:
                id: volume_button
                text: "Decrease Volume"
                size_hint: 1, None
                height: 50
                font_size: 20
                background_color: 0, 0, 0, 1
                on_press: root.adjust_volume(-5)

